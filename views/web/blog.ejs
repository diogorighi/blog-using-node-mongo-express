<!DOCTYPE html>
<html lang="en">

	<head>
		<%- include('../includes/header', {}) %>
	</head>

	<body id="page-top">

	    <%- include('../includes/nav', {}) %>

	    <% posts.forEach( function(post) { %>  

		    <section class="bg-primary" id="post">
		        <div class="container">
		            <div class="row">
		                <div class="col-lg-8 col-lg-offset-2 text-center">
		                    <h2 class="section-heading"> <%=post.title%> </h2>
		                    <hr class="light">
		                    <p class="text-faded"> <%=post.shortDescription%> </p>
		                    <a href="/post/<%=post.id%>" class="btn btn-default btn-xl"> Read full post </a>
		                </div>
		            </div>
		        </div>
		    </section>

		<% }); %>

		<%- include('../includes/javascript', {}) %>

	</body>

</html>